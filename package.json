{
  "name": "@akaoio/tui",
  "version": "0.2.3",
  "description": "Terminal UI framework for Node.js - Fork of Charsm by Sifundo Mhlungu",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && node -e \"require('fs').copyFileSync('src/lip.wasm', 'dist/lip.wasm')\" && node -e \"require('fs').cpSync('src/binary', 'dist/binary', { recursive: true })\"",
    "lint": "tsc",
    "test": "npm run build && jest",
    "test:unit": "npm run build && jest tests/unit",
    "test:integration": "npm run build && jest tests/integration",
    "test:watch": "npm run build && jest --watch",
    "test:coverage": "npm run build && jest --coverage",
    "test:verbose": "npm run build && DEBUG=1 jest --verbose",
    "pretest": "npm run lint",
    "demo": "npm run build && node demo-simple.js",
    "demo:basic": "npm run build && node demo.js", 
    "demo:os": "npm run build && node demo-os.js"
  },
  "keywords": [
    "Tui",
    "Terminal UI'S",
    "CLI",
    "Charm CLI"
  ],
  "author": "Sifundo Mhlungu <mhlungusk@gmail.com>",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akaoio/tui.git"
  },
  "bugs": {
    "url": "https://github.com/akaoio/tui/issues"
  },
  "homepage": "https://github.com/akaoio/tui#README",
  "forkedFrom": "https://github.com/SfundoMhlungu/charsm",
  "originalAuthor": "Sifundo Mhlungu <mhlungusk@gmail.com>",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/ffi-napi": "^4.0.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.17.2",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@makeomatic/ffi-napi": "^4.2.0",
    "@makeomatic/ref-napi": "^3.0.6",
    "ffi-rs": "^1.2.2",
    "ref-struct-di": "^1.1.1"
  }
}
